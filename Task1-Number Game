<body>

  <div class="game-box">
    <div class="title-row">
      <h2>Number Game</h2>
      <img src="https://img.freepik.com/free-vector/question-mark-concept-illustration_114360-4913.jpg?w=740" alt="Question Cartoon">
    </div>

    <p>Guess the number between 1 and 100. You have <strong>7</strong> attempts.</p>

    <input type="number" id="guessInput" min="1" max="100" />
    <button onclick="submitGuess()">Guess</button>
    <p class="result" id="resultMsg"></p>

    <button onclick="startNewRound()" id="newRoundBtn" style="display: none;">Play Again</button>

    <div class="scoreboard">
      <h3>Scoreboard</h3>
      <p>Rounds Played: <span id="rounds">0</span></p>
      <p>Rounds Won: <span id="won">0</span></p>
      <p>Rounds Lost: <span id="lost">0</span></p>
    </div>
  </div>

  <script>
    let target, attempts, maxAttempts = 7;
    let rounds = 0, won = 0, lost = 0;

    function startNewRound() {
      target = Math.floor(Math.random() * 100) + 1;
      attempts = 0;
      document.getElementById("resultMsg").textContent = "";
      document.getElementById("guessInput").value = "";
      document.getElementById("guessInput").disabled = false;
      document.querySelector("button[onclick='submitGuess()']").disabled = false;
      document.getElementById("newRoundBtn").style.display = "none";
      rounds++;
      updateScoreboard();
    }

    function submitGuess() {
      const guess = Number(document.getElementById("guessInput").value);
      if (!guess || guess < 1 || guess > 100) {
        document.getElementById("resultMsg").textContent = "Enter a number between 1 and 100.";
        return;
      }

      attempts++;

      if (guess === target) {
        document.getElementById("resultMsg").textContent = `Correct! You guessed it in ${attempts} attempt(s).`;
        won++;
        endRound();
      } else if (attempts >= maxAttempts) {
        document.getElementById("resultMsg").textContent = `Out of attempts! The number was ${target}.`;
        lost++;
        endRound();
      } else if (guess < target) {
        document.getElementById("resultMsg").textContent = `Too low! Attempts left: ${maxAttempts - attempts}`;
      } else {
        document.getElementById("resultMsg").textContent = `Too high! Attempts left: ${maxAttempts - attempts}`;
      }

      updateScoreboard();
    }

    function endRound() {
      document.getElementById("guessInput").disabled = true;
      document.querySelector("button[onclick='submitGuess()']").disabled = true;
      document.getElementById("newRoundBtn").style.display = "inline-block";
    }

    function updateScoreboard() {
      document.getElementById("rounds").textContent = rounds;
      document.getElementById("won").textContent = won;
      document.getElementById("lost").textContent = lost;
    }

    startNewRound();
  </script>

</body>
